@model IEnumerable<BillsEntity.Models.BILHDR>

<table class="table table-bordered" style="width:100%" id="billsTable">
    <thead class="thead-light">
        <tr>
            <th scope="col">Bill Code</th>
            <th scope="col"> Vendor Name</th>
            <th scope="col">Bill Price</th>
            <th scope="col">Bill Image</th>
            <th scope="col">Actions</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null)
        {
            foreach (var item in Model)
            {
                <tr>
                    <th scope="row">@item.BILCOD</th>
                    <td>@item.VNDCODNavigation.VNDNAM</td>
                    <td>@item.BILPRC</td>
                    <td>@item.BILIMG</td>
                    <td>
                        <button class="btn action-edit" onclick="EditBill(@item.BILCOD)">
                            <i class="fas fa-edit" aria-hidden="true"></i>
                        </button>
                        <button class="btn action-delete" onclick="DeleteBill(@item.BILCOD)">
                            <i class="fas fa-trash" aria-hidden="true"></i>
                        </button>
                    </td>
                </tr>
            }
        }


    </tbody>
    <tfoot>
        <tr>
            <th scope="col">Bill Code</th>
            <th scope="col"> Vendor Code</th>
            <th scope="col">Bill Price</th>
            <th scope="col">Bill Image</th>
            <th scope="col">Actions</th>
        </tr>
    </tfoot>
</table>
